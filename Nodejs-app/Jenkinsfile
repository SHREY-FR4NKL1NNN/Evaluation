pipeline{
    agent any
    stages{
        stage('Clone'){
            steps{
                bat 'git clone https://github.com/Prakash-Devops/Nodejs-app.git'
            }
        }
        stage('Install Dependencies'){
            steps{
                bat 'npm install'
            }
        }
        stage('Run Tests'){
            steps{
                bat 'npm test || echo "No tests defined"'
            }
        }
        stage('Build'){
            steps{
                bat 'npm run build'
            }
        }
    }
}
